<script type="module">
  const API_BASE = 'https://gourmet.cours.quimerch.com';
  const favoriteEl = document.querySelector('.favorite-count');
  const favBtn = document.querySelector('.favorite-btn');
  const heartPath = favBtn?.querySelector('path');
  const slug = favoriteEl?.dataset.slug;
  let username = '';
  let isFavorite = false;
  let isUpdatingFav = false;

  // Toggle instructions accordion with animation
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById('instructions-toggle');
    const content = document.getElementById('instructions-content');
    
    if (toggleBtn && content) {
      toggleBtn.addEventListener('click', () => {
        toggleBtn.classList.toggle('active');
        content.classList.toggle('active');
        
        const toggleText = toggleBtn.querySelector('.toggle-text');
        if (content.classList.contains('active')) {
          toggleText.textContent = 'Masquer les instructions';
        } else {
          toggleText.textContent = 'Cliquez pour voir les instructions';
        }
      });
    }

    // Live favorites via SSE
    if ('EventSource' in window && favoriteEl && slug) {
      try {
        const es = new EventSource(`https://gourmet.cours.quimerch.com/recipes/${encodeURIComponent(slug)}/stars`);

        const applyCount = (val) => {
          if (!favoriteEl) return;
          const num = Number(val);
          if (!Number.isNaN(num)) {
            favoriteEl.textContent = num;
            // Mettre à jour les étoiles aussi
            updateStars(num);
          }
        };

        es.addEventListener('count', (evt) => applyCount(evt.data));
        es.onmessage = (evt) => applyCount(evt.data);
        es.onerror = () => {
          es.close();
        };

        window.addEventListener('beforeunload', () => es.close());
        document.addEventListener('visibilitychange', () => {
          if (document.hidden) es.close();
        });
      } catch(err){
        console.warn('SSE favorites connection failed', err);
      }
    }

    // Favorite toggle
    if (favBtn && slug) {
      initFavoriteState();
      favBtn.addEventListener('click', onToggleFavorite);
    }
  });

  function getToken(){
    const match = document.cookie.match(/(?:^|; )authToken=([^;]*)/);
    return match ? decodeURIComponent(match[1]) : '';
  }

  function updateStars(count) {
    const stars = document.querySelectorAll('.star');
    const numStars = Math.min(count || 0, 5);
    stars.forEach((star, i) => {
      if (i < numStars) {
        star.classList.add('filled');
      } else {
        star.classList.remove('filled');
      }
    });
  }

  function clearExpiredToken(){
    const isSecure = location.protocol === 'https:';
    const attrs = ['path=/', 'SameSite=Lax', 'Max-Age=0'];
    if(isSecure) attrs.push('Secure');
    document.cookie = `authToken=; ${attrs.join('; ')}`;
  }

  function setFavoriteUI(state){
    isFavorite = state;
    if(favBtn){ favBtn.classList.toggle('active', state); favBtn.setAttribute('aria-pressed', String(state)); }
    if(heartPath){
      heartPath.style.fill = state ? '#fff' : 'none';
      heartPath.style.stroke = state ? 'none' : 'currentColor';
    }
  }

  function bumpCount(delta){
    if(!favoriteEl) return;
    const num = Number(favoriteEl.textContent || '0');
    const next = num + delta;
    if(!Number.isNaN(next) && next >= 0) favoriteEl.textContent = next;
  }

  async function fetchUsername(){
    const token = getToken();
    if(!token) return '';
    const res = await fetch(`${API_BASE}/me`, { headers:{ 'Accept':'application/json, application/xml', Authorization:`Bearer ${token}` } });
    if(!res.ok){
      if(res.status === 401 || res.status === 403){ clearExpiredToken(); }
      return '';
    }
    const data = await res.json();
    return data.username || '';
  }

  async function fetchIsFavorite(){
    const token = getToken();
    if(!token || !slug) return false;
    const res = await fetch(`${API_BASE}/favorites`, { headers:{ 'Accept':'application/json, application/xml', Authorization:`Bearer ${token}` } });
    if(!res.ok){
      if(res.status === 401 || res.status === 403){ clearExpiredToken(); }
      return false;
    }
    const data = await res.json();
    if(!Array.isArray(data)) return false;
    return data.some(item => item?.recipe?.id === slug);
  }

  async function initFavoriteState(){
    try{
      username = await fetchUsername();
      const state = await fetchIsFavorite();
      setFavoriteUI(state);
    }catch(err){ console.warn('Init favorite failed', err); }
  }

  async function onToggleFavorite(e){
    e.preventDefault();
    if(isUpdatingFav) return;
    const token = getToken();
    if(!token){ alert('Connectez-vous pour gérer vos favoris.'); return; }
    if(!username){ username = await fetchUsername(); }
    if(!username){ alert('Impossible de récupérer votre profil.'); return; }
    if(!slug) return;

    isUpdatingFav = true;
    try{
      if(!isFavorite){
        const res = await fetch(`${API_BASE}/users/${encodeURIComponent(username)}/favorites?recipeID=${encodeURIComponent(slug)}`, {
          method:'POST',
          headers:{
            'Accept':'application/json, application/xml',
            'Content-Type':'application/json',
            Authorization:`Bearer ${token}`
          }
        });
        if(res.ok){ setFavoriteUI(true); bumpCount(1); }
        else if(res.status === 401 || res.status === 403){ clearExpiredToken(); alert('Votre session a expiré. Reconnectez-vous.'); }
      } else {
        const res = await fetch(`${API_BASE}/users/${encodeURIComponent(username)}/favorites?recipeID=${encodeURIComponent(slug)}`, {
          method:'DELETE',
          headers:{
            'Accept':'application/json, application/xml',
            Authorization:`Bearer ${token}`
          }
        });
        if(res.ok){ setFavoriteUI(false); bumpCount(-1); }
        else if(res.status === 401 || res.status === 403){ clearExpiredToken(); alert('Votre session a expiré. Reconnectez-vous.'); }
      }
    } catch(err){ console.warn('Favorite toggle failed', err); }
    finally {
      isUpdatingFav = false;
    }
  }
</script>
