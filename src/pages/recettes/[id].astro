            sizes="(max-width:640px) 100vw, (max-width:1024px) 100vw, 50vw"
            alt={recipe.name}
            loading="eager"
            fetchpriority="high"
            decoding="async"
            width="800"
            height="800"
            onload="this.closest('.hero-image')?.classList.add('loaded')"
            />
        ) : (
          <div class="no-image">Image non disponible</div>
        )}
      </div>
      
      <div class="hero-content">
        <div class="hero-header">
          <h1>{recipe.name}</h1>
          <button class="favorite-btn" title="Ajouter aux favoris" aria-label="Ajouter aux favoris">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
