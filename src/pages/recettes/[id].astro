export async function getStaticPaths() {
  const API_URL = 'https://gourmet.cours.quimerch.com';
  const MAX_RETRIES = 3;
  const RETRY_DELAY = 2000; // 2 seconds
  
  async function fetchWithRetry(url, retries = MAX_RETRIES) {
    for (let attempt = 1; attempt <= retries; attempt++) {
      try {
        console.log(`[BUILD] Attempt ${attempt}/${retries}: Fetching ${url}`);
        
        // Fetch with timeout (30 seconds)
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 30000);
        
        const res = await fetch(url, {
          headers: { Accept: 'application/json' },
          signal: controller.signal
        });
        clearTimeout(timeoutId);
        
        console.log(`[BUILD] Response status: ${res.status} ${res.statusText}`);
        
        if (res.ok) {
          return res;
        }
        
        // If not ok, log and retry
        const text = await res.text();
        console.error(`[BUILD] API returned ${res.status}: ${text.substring(0, 200)}`);
        
        if (attempt < retries) {
          console.log(`[BUILD] Retrying in ${RETRY_DELAY}ms...`);
          await new Promise(resolve => setTimeout(resolve, RETRY_DELAY));
        }
      } catch (err) {
        console.error(`[BUILD] Attempt ${attempt} failed:`, err instanceof Error ? err.message : String(err));
        
        if (attempt < retries) {
          console.log(`[BUILD] Retrying in ${RETRY_DELAY}ms...`);
          await new Promise(resolve => setTimeout(resolve, RETRY_DELAY));
        }
      }
    }
    
    throw new Error(`Failed to fetch ${url} after ${retries} attempts`);
  }
  
  try {
    console.log('[BUILD] Starting recipe routes generation');
    console.log('[BUILD] API URL:', API_URL);
    
    const res = await fetchWithRetry(`${API_URL}/recipes?limit=1000`);
    
    if (res.ok) {
      const recipes = await res.json();
      console.log(`[BUILD] ✓ Successfully generated ${recipes.length} recipe routes`);
      return recipes.map(recipe => ({
        params: { id: String(recipe.id) }
      }));
    }
  } catch (err) {
    console.error('[BUILD] Fatal error:', err instanceof Error ? err.message : String(err));
  }
  
  console.warn('[BUILD] ⚠️ No recipe routes generated - API fetch failed');
  return [];
}

const { id } = Astro.params;
const API_URL = 'https://gourmet.cours.quimerch.com';

// Fetch recipe details
let recipe = null;
let ingredients = [];
let relatedRecipes = [];
let error = null;

try {
  const recipeRes = await fetch(`${API_URL}/recipes/${id}`, {
    headers: { Accept: 'application/json' }
  });
  
  if (recipeRes.ok) {
    recipe = await recipeRes.json();
    
    // Fetch ingredients for this recipe
    try {
      const ingredientsRes = await fetch(`${API_URL}/recipes/${id}/ingredients`, {
        headers: { Accept: 'application/json' }
      });
      if (ingredientsRes.ok) {
        ingredients = await ingredientsRes.json();
      }
    } catch (err) {
      console.error('Error fetching ingredients:', err);
    }
    
    // Fetch related recipes (same category)
    if (recipe.category) {
      try {
        const relatedRes = await fetch(`${API_URL}/recipes?category=${recipe.category}&limit=4`, {
          headers: { Accept: 'application/json' }
        });
        if (relatedRes.ok) {
          const allRelated = await relatedRes.json();
          relatedRecipes = allRelated.filter(r => r.id !== recipe.id).slice(0, 3);
        }
      } catch (err) {
        console.error('Error fetching related recipes:', err);
      }
    }
  } else {
    error = 'Recette non trouvée';
  }
} catch (err) {
  console.error('Error fetching recipe:', err);
  error = 'Erreur lors du chargement de la recette';
}

if (!recipe) {
  return Astro.redirect('/recettes');
}
// Build responsive image URLs and low-res placeholder
const withWidth = (url, w) => {
  try {
    const u = new URL(url);
    u.searchParams.set('w', String(w));
    return u.toString();
  } catch {
    return url;
  }
};
const heroSrc320 = recipe.image_url ? withWidth(recipe.image_url, 320) : '';
const heroSrc640 = recipe.image_url ? withWidth(recipe.image_url, 640) : '';
const heroSrc800 = recipe.image_url ? withWidth(recipe.image_url, 800) : '';
const heroSrc1200 = recipe.image_url ? withWidth(recipe.image_url, 1200) : '';
let lowResUrl = '';
if (recipe.image_url) {
  try {
    const u = new URL(recipe.image_url);
    u.searchParams.set('w', '24');
    u.searchParams.set('blur', '30');
    lowResUrl = u.toString();
  } catch {
    lowResUrl = recipe.image_url;
  }
}
